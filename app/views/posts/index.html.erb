<p id="notice"><%= notice %></p>

<h1>Mały Blog</h1>

<table>
  <thead>
    <tr>
      <th>Nazwa</th>
      <th>Wpis</th>
      <th>Kategoria</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.name %></td>
        <td><%= post.body %></td>
        
        <td><%= link_to 'pokaż', post %></td>
        <td><%= link_to 'Edytuj', edit_post_path(post) %></td>
        <td><%= link_to 'Usuń', post, method: :delete, data: { confirm: 'Jesteś pewien?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nowy Wpis', new_post_path %>
